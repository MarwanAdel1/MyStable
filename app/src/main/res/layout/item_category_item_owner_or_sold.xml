<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/owner_and_sold_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/very_light_pink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/owner_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginVertical="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/owner_and_sold_view" />

    <TextView
        android:id="@+id/owner_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/sfpro_semibold"
        android:text="David Cook"
        android:textColor="@color/text_color_black"
        android:textSize="15sp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/owner_image"
        app:layout_constraintTop_toTopOf="@id/owner_image" />

    <TextView
        android:id="@+id/owner_desc_tx"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sfpro_regular"
        android:text="Owner"
        android:textColor="@color/dark_beige"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/owner_name"
        app:layout_constraintTop_toBottomOf="@id/owner_name" />


    <ImageButton
        android:id="@+id/owner_chat_bt"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="20dp"
        android:background="@android:color/transparent"
        android:src="@drawable/icon_btn_chat"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/owner_image"
        app:layout_constraintEnd_toStartOf="@id/owner_mail_bt"
        app:layout_constraintTop_toTopOf="@id/owner_image" />

    <ImageButton
        android:id="@+id/owner_mail_bt"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shape_rounded_corner_owner_button_image_view"
        android:src="@drawable/icon_btn_email"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/owner_image"
        app:layout_constraintEnd_toStartOf="@id/owner_phone_bt"
        app:layout_constraintTop_toTopOf="@id/owner_image" />

    <ImageButton
        android:id="@+id/owner_phone_bt"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shape_rounded_corner_owner_button_image_view"
        android:src="@drawable/icon_btn_phone"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/owner_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/owner_image" />


    <Button
        android:id="@+id/sold_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:background="@drawable/shape_rounded_button"
        android:fontFamily="@font/sfpro_bold"
        android:text="@string/sold_out"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>