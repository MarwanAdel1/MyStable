<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#e8dbc9">
    <item android:id="@android:id/mask">
        <shape>
            <gradient
                android:angle="135"
                android:endColor="@color/white"
                android:startColor="#c39f6f"
                android:type="linear" />
            <corners android:radius="3dp" />
            <padding
                android:bottom="3dp"
                android:left="3dp"
                android:right="3dp"
                android:top="3dp" />
        </shape>
    </item>
</ripple>

